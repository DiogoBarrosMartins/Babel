generator client {
  provider = "prisma-client-js"
  output        = "../../../node_modules/.prisma/client"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://root:password@localhost:5432/combat"
}

model Battle {
  id               String   @id @default(uuid())
  attackerVillageId String
  defenderVillageId String?
  originX          Int
  originY          Int
  targetX          Int
  targetY          Int
  troops           Json
  startTime        DateTime
  arrivalTime      DateTime
  status           String
  createdAt        DateTime @default(now())

  report           BattleReport?
}

model BattleReport {
  battleId         String   @id
  outcome          String
  attackerLosses   Json
  defenderLosses   Json
  loot             Json
  notes            String?
  createdAt        DateTime @default(now())

  battle           Battle   @relation(fields: [battleId], references: [id])
}

