generator client {
  provider      = "prisma-client-js"
  output        = "../../../node_modules/.prisma/client"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TileType {
  VILLAGE
  OUTPOST
  EMPTY
  SHRINE
}


model Tile {
  id         String   @id @default(uuid())
  x          Int
  y          Int
  name       String
  type       String
  race       String
  playerId   String
  playerName String
  metadata   Json?
}

model World {
  id          String   @id @default(uuid())
  name        String   @unique
  isGenerated Boolean  @default(false)
  createdAt   DateTime @default(now())
  size        Int
}

