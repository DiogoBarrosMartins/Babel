generator client {
  provider = "prisma-client-js"
  output        = "../../../node_modules/.prisma/client"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Village {
  id        String   @id @default(uuid())
  name      String
  playerId  String
  x         Int?
  y         Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  playerName String
  
  resourceAmounts          Json     @default("{\"wood\":500,\"clay\":500,\"iron\":500,\"grain\":500}")
  resourceProductionRates  Json     @default("{\"wood\":10,\"clay\":10,\"iron\":10,\"grain\":8}")
  lastCollectedAt         DateTime @default(now())

}